automacro antoniojr2 {
	#exclusive 0
	run-once 1
	var LogQuest == 8
	var Lab == 1
	call {
		do move 173 108
		pause 2
		do talknpc 177 109 c w2 c w2 c w2 c w2 c w2 r0 w2 c w2
		$LogQuest = 9
		$NewLab = 5
		release reload
		release reload2
	}
}

