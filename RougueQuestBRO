automacro hermanthornjr2 {
	var LogQuest == 7
	var Lab == 2
	run-once 1
	#exclusive 0
	console /a combinação de quatro números são (\d+)/i
	call {
		do move in_rogue 271 130
		pause 2
		do talk cont
		pause 2
		to talk num $.lastMatch1
		$NewLab = 6
		release reload
		release reload2
	}
}

