automacro reload {
	status Sitting
	run-once 1
	exclusive 1
	timeout 5
	call {
		$oldLogQuest = $LogQuest
		pause 1
		$LogQuest = @eval($oldLogQuest - 1)
		pause 1
		release all
		do reload macros
	}
}

automacro reload2 {
	console /Desconectado do Servidor de Mapas/i
	exclusive 1
	timeout 5
	run-once 1
	call {
		$oldLogQuest = $LogQuest
		pause 1
		$LogQuest = @eval($oldLogQuest - 1)
		pause 1
		release all
		do reload macros
	}
}

automacro morreu {
	console /Você morreu./i
	call {
	release all
	if ($Lab = 1) call console1
	if ($Lab = 2) call console2
	if ($Lab = 3) call console3
	if ($Lab = 4) call console4
	}
}

# Criar LOG caso haja DC.
automacro criarlog {
	var LogQuest unset
	#exclusive 0
	run-once 1
	call {
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		log = = = = = = = =  Rogue Quest by CooLow  = = = = = = = =
		log = = = = = =  Iniciando Protocolo das Macros = = = = = =
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		$LogQuest = 1
		do conf lockMap 0
		do conf attackAuto 0
		do conf route_randomWalk 0
		#do conf autoTalkCont 0
		release reload
		release reload2
	}
}

# Encontrar Arruaceira da Guilda in_rogue 367, 120
automacro encontrar1 {
	var LogQuest == 1 
	#exclusive 0
	run-once 1
	call {
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		log = = = = = = = =  Rogue Quest by CooLow  = = = = = = = =
		log = = = = = =  Etapa 1 - Encontrar NPC da Quest = = = = =
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		do move in_rogue 367 120
		$LogQuest = 2
		release reload
		release reload2
	}
}

# Responder Questionário in_rogue 367, 120
automacro questionario {
	run-once 1
	var LogQuest == 2 
	call {
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		log = = = = = = = =  Rogue Quest by CooLow  = = = = = = = =
		log = = =  Etapa 2 - Iniciando Sequencia das Questões = = =
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		do talknpc 363 122 c w2 c w2 c w2 c w2 c w2 c w2 c w2 r0 c w2 c w2
		pause 2
		release reload
		release reload2
	}
}

automacro sequencia1 {
	var LogQuest == 2
	run-once 1
	#exclusive 0
	console /Perseguir/i
	call {
		#do conf autoTalkCont 1
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		log = = = = = = = =  Rogue Quest by CooLow  = = = = = = = =
		log = = = = = = = =  Etapa 2 - Sequencia 1  = = = = = = = =
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		pause 2
		do talk resp 0
		pause 2
		do talk resp 2
		pause 2
		do talk resp 2
		pause 2
		do talk resp 3
		pause 2
		do talk resp 3
		pause 2
		do talk resp 2
		pause 2
		do talk resp 2
		pause 2
		do talk resp 2
		pause 2
		do talk resp 1
		pause 2
		do talk resp 0
		pause 2
		$LogQuest = 3
		release reload
		release reload2
	}
}

