automacro finaliza {
	location in_rogue 378 113, in_rogue 367 10
	var LogQuest == 10
	#exclusive 0
	run-once 1
	call {
		do move in_rogue 368 119
		pause 2
		do talknpc 363 122 c w2 c w2 c w2
		do relog 9999999
	}
}
