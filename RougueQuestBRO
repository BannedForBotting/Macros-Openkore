## Falta daqui pra baixo.

automacro console1 {
	console /Antonio não gosta de destruir itens de aprimoramento/i
	var LogQuest == 7
	run-once 1
	#exclusive 0
	call {
		do talk no
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		log = = = = = = = Rogue Quest by CooLow = = = = = = = = = =
		log = = = =  Etapa 7 - Encontrar Antonio Jr.  = = = = = = =
		log = = = = = = = = = = = = = = = = = = = = = = = = = = = =
		do move cmd_fild04 304 179
		pause 2
		do talk cont
		pause 2	
		do talk resp 2
		pause 2	
		do talk resp 1
		pause 2	
		do talk resp 1
		pause 2	
		do talk resp 2
		pause 2	
		do talk cont
		$Lab = 1
		$LogQuest = 8
		release reload
		release reload2
	}
}

